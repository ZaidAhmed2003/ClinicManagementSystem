@model IEnumerable<ClinicManagementSystem.Models.EducationalActivityModel>

@{
	ViewData["Title"] = "Educational Activities";
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">



	<div class="row">
		<div class="col-12">
			<div class="d-flex justify-content-between align-items-center py-2">
				<h4>Educational Activities</h4>
				<ol class="breadcrumb d-lg-flex d-none mb-0">
					<li class="breadcrumb-item"><a href="javascript: void(0);">TechUI</a></li>
					<li class="breadcrumb-item"><a href="javascript: void(0);">Education</a></li>
					<li class="breadcrumb-item"><a href="javascript: void(0);">Educational Activities</a></li>
				</ol>
			</div>
		</div>
	</div>

	<div class="row">
		@foreach(var activity in Model){
			<div class="col-sm-6 col-lg-3">
				<!-- Simple card -->
				<div class="card d-block">
					<div class="card-body">
						<h4 class="card-title">@activity.Title</h4>
						<p class="card-text">
							@activity.Description
						</p>
						<p>@activity.ActivityType</p>
						<p>@activity.Date.ToString("MM/dd/yyyy")</p>
							<p>@activity.Staff.Position: @activity.Staff.FirstName @activity.Staff.LastName</p>	
					</div> <!-- end card-body-->
				</div> <!-- end card-->
			</div>
		}	
	</div>
</div>
