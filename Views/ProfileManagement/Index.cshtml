@model ClinicManagementSystem.ViewModels.UserProfileViewModel


@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">

	<!-- start page title -->
	<div class="row">
		<div class="col-12">
			<div class="d-flex justify-content-between align-items-center py-2">
				<h4>Profile</h4>


				<ol class="breadcrumb d-lg-flex d-none mb-0">
					<li class="breadcrumb-item"><a href="javascript: void(0);">TechUI</a></li>
					<li class="breadcrumb-item"><a href="javascript: void(0);">Extra Pages</a></li>

					<li class="breadcrumb-item"><a href="javascript: void(0);">Profile</a></li>
				</ol>
			</div>
		</div>
	</div>
	<!-- end page title -->
	<!-- start page title -->

	<div class="row">
		<div class="col-12">
			<div class="card overflow-hidden">
				<div class="card-body">
					<div>
						<img src="~/assets/images/db7.png" alt="" width="100%" height="400" class="object-fit-cover rounded">
					</div>

					<div class="w-100">
						<div class="d-flex justify-content-between mb-4 ms-2">
							<div>
								<img src="@(Model.ProfileImagePath ?? $"https://ui-avatars.com/api/?name={Uri.EscapeDataString(Model.FirstName + "+" + Model.LastName)}&background=a0a0a0&size=128")" alt="" width="150" class="img-thumbnail rounded-circle" style="margin-top: -60px;">
							</div>
							<div class="d-flex align-items-start gap-2 mt-2">
								<a asp-controller="ProfileManagement" asp-action="EditProfile" asp-route-id="@Model.UserName" class="btn btn-primary text-center mb-1"><span class="mdi mdi-account-edit me-1"></span>Edit Profile</a>
							</div>
						</div>

						<div class="d-flex justify-content-between w-100">
							<div>
								<h3 class="mb-2 mt-0">@Model.FirstName @Model.LastName </h3>
								<p class="mb-0 font-16">@Model.Email</p>
								<p class="font-16 mb-4"> United States</p>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="card">
				<div class="card-body">
					<h5 class="card-title mb-3">PROFILE INFORMATION</h5>
					<ul class="list-unstyled">
						<li class="mb-2">
							<b>Full Name : </b><span class="ms-1 text-muted">
								@Model.FirstName
								@Model.LastName
							</span>
						</li>
						<li class="mb-2">
							<b>Mobile :</b> <span class="ms-1 text-muted">
								@Model.Mobile
							</span>
						</li>
						<li class="mb-2"><b>Email :</b> <a href="" class="ms-1 text-muted"> @Model.Email </a></li>
						<li class="mb-2">
							<b>Location : </b><span class="ms-1 text-muted">
								United
								Stat
							</span>
						</li>
					</ul>

				</div>
			</div> <!-- end card -->



		</div>
	</div>
</div>


