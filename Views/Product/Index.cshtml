@model IEnumerable<ClinicManagementSystem.Models.ProductModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var searchTerm = ViewData["SearchTerm"] as string; // Get searchTerm from ViewData
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center py-2">
                <h4>Dashboard</h4>
                <ol class="breadcrumb d-lg-flex d-none mb-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Clinic Management App</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Ecommerce</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Products</a></li>
                </ol>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="d-flex col-sm-5 gap-1 gap-lg-2">
                            <a asp-controller="Product" asp-action="AddProduct" class="btn btn-danger"><i class="mdi mdi-plus-circle me-2"></i> Add Products</a>
                            <li class="app-search dropdown d-none d-lg-block">
                                <form method="get">
                                    <input type="search" name="searchTerm" class="form-control" value="@searchTerm" placeholder="Search product...">
                                    <span class="mdi mdi-magnify search-icon font-22"></span>
                                </form>
                            </li>
                        </div>
                        <div class="col-sm-7">
                            <div class="text-sm-end">
                                <button type="submit" form="deleteMultipleForm" class="btn btn-danger me-1">Delete all</button>
                            </div>
                        </div>
                    </div>
                </div>

                <form id="deleteMultipleForm" asp-action="DeleteMultiple" method="post">
                    <div class="table-responsive">
                            <table class="table table-centered w-100 nowrap mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="all" style="width: 20px;">
                                            <div class="form-check">
                                                <input type="checkbox" class="form-check-input" id="selectAll">
                                                <label class="form-check-label" for="selectAll">&nbsp;</label>
                                            </div>
                                        </th>
                                        <th class="all">Product</th>
                                        <th>Product Code</th>
                                        <th>Brand</th>
                                        <th>Added Date</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Status</th>
                                        <th style="width: 120px;">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" name="SelectedProducts" value="@product.ProductId" />
                                                    <label class="form-check-label">&nbsp;</label>
                                                </div>
                                            </td>
                                            <td>
                                                <img src="@product.ImagePath" alt="@product.Name-img" title="@product.Name-img" class="rounded me-3" height="48" />
                                                <p class="m-0 d-inline-block align-middle font-16">
                                                <a asp-controller="Product" asp-route-id="@product.ProductId" asp-action="ViewProductDetails" class="text-body">@product.Name</a>
                                                </p>
                                            </td>
                                            <td>@product.SKU</td>
                                            <td>@product.Brand</td>
                                            <td>@product.CreatedAt.ToString("MM/dd/yyyy")</td>
                                            <td>$@product.Price</td>
                                            <td>@(product.Inventory != null ? product.Inventory.Quantity.ToString() : "N/A")</td>
                                            <td>
                                                @if (product.IsAvailable)
                                                {
                                                    <span class="badge bg-success-subtle text-success p-1">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger-subtle text-danger p-1">Inactive</span>
                                                }
                                            </td>
                                            <td class="table-action">
                                                <a asp-controller="Product" asp-route-id="@product.ProductId" asp-action="ViewProductDetails" class="action-icon"> <i class="mdi mdi-eye"></i></a>
                                                <a asp-controller="Product" asp-route-id="@product.ProductId" asp-action="EditProduct" class="action-icon"> <i class="mdi mdi-square-edit-outline"></i></a>
                                                <a asp-controller="Product" asp-route-id="@product.ProductId" asp-action="DeleteProduct" class="action-icon"> <i class="mdi mdi-delete"></i></a>
                                            </td>
                                        </tr>
                                    }
                          
                                </tbody>
                            </table>
                            <div class="card-body">
                                <nav aria-label="Page navigation">
                                    <ul class="pagination justify-content-end">
                                        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                                            <a class="page-link" href="@Url.Action("ListProducts", new { page = ViewBag.CurrentPage - 1, searchTerm = ViewBag.SearchTerm, categoryFilter = ViewBag.CategoryFilter, sortBy = ViewBag.SortBy })" tabindex="-1">Previous</a>
                                        </li>
                                        @for (var i = 1; i <= ViewBag.TotalPages; i++)
                                        {
                                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                                <a class="page-link" href="@Url.Action("ListProducts", new { page = i, searchTerm = ViewBag.SearchTerm, categoryFilter = ViewBag.CategoryFilter, sortBy = ViewBag.SortBy })">@i</a>
                                            </li>
                                        }
                                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                                            <a class="page-link" href="@Url.Action("ListProducts", new { page = ViewBag.CurrentPage + 1, searchTerm = ViewBag.SearchTerm, categoryFilter = ViewBag.CategoryFilter, sortBy = ViewBag.SortBy })">Next</a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                    </div>
                </form>
            </div> <!-- end card-->
        </div> <!-- end col -->
    </div>
</div>
