@model IEnumerable<ClinicManagementSystem.Models.TransactionModel>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">

	<!-- start page title -->
	<div class="row">
		<div class="col-12">
			<div class="d-flex justify-content-between align-items-center py-2">
				<h4>Transactions</h4>
				<ol class="breadcrumb d-lg-flex d-none mb-0">
					<li class="breadcrumb-item"><a href="javascript: void(0);">Clinic Management System</a></li>
					<li class="breadcrumb-item"><a href="javascript: void(0);">App</a></li>

					<li class="breadcrumb-item"><a href="javascript: void(0);">Transactions</a></li>
				</ol>
			</div>
		</div>
	</div>
	<!-- end page title -->


	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="card-body">
					<div id="key-datatable_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">

						<div class="col-sm-12">
							<table id="transaction-datatable" class="table dt-responsive nowrap w-100 dataTable no-footer" aria-describedby="key-datatable_info">
								<thead>
									<tr>
										<th rowspan="1" colspan="1" style="width: 320.594px;">OrderId</th>
										<th rowspan="1" colspan="1" style="width: 320.594px;">Date</th>
										<th rowspan="1" colspan="1" style="width: 320.594px;">Amount</th>

										<th rowspan="1" colspan="1" style="width: 320.594px;">Status</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var transaction in Model)
									{
										<tr class="odd">
											<td>@transaction.Order.TrackingID</td>
											<td>@transaction.TransactionDate.ToString("dd/mm/yyyy")</td>
											<td>@transaction.Amount</td>

											<td>@transaction.TransactionStatus</td>
										</tr>
									}

								</tbody>
							</table>
						</div>
					</div><div class="row"><div class="col-sm-12 col-md-5"><div class="dataTables_info" id="key-datatable_info" role="status" aria-live="polite">Showing 1 to 10 of 57 entries</div></div><div class="col-sm-12 col-md-7"><div class="dataTables_paginate paging_simple_numbers" id="key-datatable_paginate"><ul class="pagination pagination-rounded"><li class="paginate_button page-item previous disabled" id="key-datatable_previous"><a aria-controls="key-datatable" aria-disabled="true" aria-role="link" data-dt-idx="previous" tabindex="0" class="page-link"><i class="mdi mdi-chevron-left"></i></a></li><li class="paginate_button page-item active"><a href="#" aria-controls="key-datatable" aria-role="link" aria-current="page" data-dt-idx="0" tabindex="0" class="page-link">1</a></li><li class="paginate_button page-item "><a href="#" aria-controls="key-datatable" aria-role="link" data-dt-idx="1" tabindex="0" class="page-link">2</a></li><li class="paginate_button page-item "><a href="#" aria-controls="key-datatable" aria-role="link" data-dt-idx="2" tabindex="0" class="page-link">3</a></li><li class="paginate_button page-item "><a href="#" aria-controls="key-datatable" aria-role="link" data-dt-idx="3" tabindex="0" class="page-link">4</a></li><li class="paginate_button page-item "><a href="#" aria-controls="key-datatable" aria-role="link" data-dt-idx="4" tabindex="0" class="page-link">5</a></li><li class="paginate_button page-item "><a href="#" aria-controls="key-datatable" aria-role="link" data-dt-idx="5" tabindex="0" class="page-link">6</a></li><li class="paginate_button page-item next" id="key-datatable_next"><a href="#" aria-controls="key-datatable" aria-role="link" data-dt-idx="next" tabindex="0" class="page-link"><i class="mdi mdi-chevron-right"></i></a></li></ul></div></div></div>
				</div>

			</div> <!-- end card body-->
		</div> <!-- end card -->
	</div><!-- end col-->
</div>
<!-- end row -->
</div>


@section DashboardScripts {
	<script>
		new DataTable('#transaction-datatable"');
	</script>
}