@model ClinicManagementSystem.Models.ProductDiscountModel

@{
    ViewData["Title"] = "AddDiscount";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center py-2">
                <h4>Add Category</h4>
                <ol class="breadcrumb d-lg-flex d-none mb-0">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Clinic Management System</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Ecommerce</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Category</a></li>
                    <li class="breadcrumb-item active">Add Category</li>
                </ol>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-1">Category Details</h4>
                    <p class="text-muted mb-0">Title, description</p>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Discount" asp-action="AddDiscount">
                        <div class="row">
                            <div class="col-xl-6">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">Discount Name</label>
                                    <input asp-for="Name" type="text" class="form-control" placeholder="Enter Category name">
                                </div>
                            </div>


                            <div class="col-xl-6">
                                <div class="mb-3">
                                    <label asp-for="DiscountValue" class="form-label">Discount Value</label>
                                    <input asp-for="DiscountValue" type="number" class="form-control" placeholder="Enter Description">
                                </div>

                            </div>

                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-dark">Add Discount</button>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

